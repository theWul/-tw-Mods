<?xml version="1.0" encoding="utf-8" ?>
<Defs>
     <ThingDef Name="twGlovesBase" ParentName="ApparelMakeableBase" Abstract="True">
          <statBases>
               <Mass>0.2</Mass>
               <DeteriorationRate>0.1</DeteriorationRate>
          </statBases>
          <thingCategories>
               <li>Apparel</li>
          </thingCategories>
          <recipeMaker>
               <researchPrerequisite>ComplexClothing</researchPrerequisite>
               <recipeUsers>
                    <li>ElectricTailoringBench</li>
                    <li>HandTailoringBench</li>
               </recipeUsers>
          </recipeMaker>
          <generateCommonality>0.5</generateCommonality>
          <apparel>
               <careIfWornByCorpse>true</careIfWornByCorpse>
               <bodyPartGroups>
                    <li>Hands</li>
               </bodyPartGroups>
               <layers>
                    <li>OnSkin</li>
               </layers>
          </apparel>
     </ThingDef>

     <!-- Simple gloves -->
     <ThingDef ParentName="twGlovesBase">
          <defName>twGloves</defName>
          <label>Gloves</label>
          <description>Simple pair of gloves.</description>
          <graphicData>
               <texPath>gloves</texPath>
               <graphicClass>Graphic_Single</graphicClass>
          </graphicData>
          <stuffCategories>
               <li>Fabric</li>
               <li>Leathery</li>
          </stuffCategories>
          <costStuffCount>35</costStuffCount>
          <apparel>
               <tags>
                    <li>Tribal</li>
                    <li>Outlander</li>
               </tags>
          </apparel>
          <statBases>
               <MaxHitPoints>90</MaxHitPoints>
               <WorkToMake>4000</WorkToMake>
               <ArmorRating_Heat>0.03</ArmorRating_Heat>
               <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
               <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
               <Insulation_Cold>-2</Insulation_Cold>
               <Insulation_Heat>0</Insulation_Heat>
          </statBases>
     </ThingDef>

     <!-- Mittens -->
     <ThingDef ParentName="twGlovesBase">
          <defName>twMittens</defName>
          <label>Mittens</label>
          <description>Warm mittens for the cold days. Somewhat bulky though.</description>
          <graphicData>
               <texPath>mittens</texPath>
               <graphicClass>Graphic_Single</graphicClass>
          </graphicData>
          <stuffCategories>
               <li>Fabric</li>
          </stuffCategories>
          <costStuffCount>50</costStuffCount>
          <apparel>
               <tags>
                    <li>Tribal</li>
                    <li>Outlander</li>
               </tags>
          </apparel>
          <statBases>
               <MaxHitPoints>90</MaxHitPoints>
               <WorkToMake>6000</WorkToMake>
               <ArmorRating_Heat>0.04</ArmorRating_Heat>
               <ArmorRating_Blunt>0.04</ArmorRating_Blunt>
               <ArmorRating_Sharp>0.04</ArmorRating_Sharp>
               <Insulation_Cold>-5</Insulation_Cold>
               <Insulation_Heat>1</Insulation_Heat>
          </statBases>
          <equippedStatOffsets>
               <WorkSpeedGlobal>-0.05</WorkSpeedGlobal>
          </equippedStatOffsets>
     </ThingDef>
     
     <!-- Power Armor Gloves -->
     <ThingDef ParentName="ArmorMakeableBase">
          <defName>twPowerArmorGloves</defName>
          <label>Power armor gloves</label>
          <description>Powered armor gloves to make your assault outfit complete.</description>
          <techLevel>Spacer</techLevel>
          <recipeMaker>
               <researchPrerequisite>PoweredArmor</researchPrerequisite>
               <workSpeedStat>SmithingSpeed</workSpeedStat>
               <workSkill>Crafting</workSkill>
               <effectWorking>Smith</effectWorking>
               <soundWorking>Recipe_Machining</soundWorking>
               <recipeUsers>
                    <li>TableMachining</li>
               </recipeUsers>
               <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
          </recipeMaker>
          <graphicData>
               <texPath>powerarmorgloves</texPath>
               <graphicClass>Graphic_Single</graphicClass>
          </graphicData>
          <statBases>
               <DeteriorationRate>0</DeteriorationRate>
               <WorkToMake>40000</WorkToMake>
               <MaxHitPoints>160</MaxHitPoints>
               <Mass>2.7</Mass>
               <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
               <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
               <ArmorRating_Heat>0.5</ArmorRating_Heat>
               <ArmorRating_Electric>0</ArmorRating_Electric>
               <Insulation_Cold>-3</Insulation_Cold>
               <Insulation_Heat>3</Insulation_Heat>
          </statBases>
          <thingCategories>
               <li>Apparel</li>
          </thingCategories>
          <costList>
               <Component>7</Component>
               <Plasteel>60</Plasteel>
          </costList>
          <generateCommonality>2</generateCommonality>
          <apparel>
               <bodyPartGroups>
                    <li>Hands</li>
               </bodyPartGroups>
               <layers>
                    <li>OnSkin</li>
               </layers>
               <tags>
                    <li>Military</li>
               </tags>
               <defaultOutfitTags>
                    <li>Soldier</li>
               </defaultOutfitTags>
          </apparel>
          <equippedStatOffsets>
               <WorkSpeedGlobal>-0.05</WorkSpeedGlobal>
          </equippedStatOffsets>
     </ThingDef>
</Defs>
